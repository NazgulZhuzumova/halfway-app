<div class="container-fluid">
  <h1>Favourites</h1>
    <nav class="scroller">
      <ul class="nav nav-tabs nav-fill" id="myTab" role="tablist">
        <li class="nav-item" role="presentation">
          <button class="nav-link active" id="upcoming-tab" data-bs-toggle="tab" data-bs-target="#upcoming" type="button" role="tab" aria-controls="upcoming" aria-selected="true">Drinks</button>
        </li>
        <li class="nav-item" role="presentation">
          <button class="nav-link" id="pending-tab" data-bs-toggle="tab" data-bs-target="#pending" type="button" role="tab" aria-controls="pending" aria-selected="false">Food</button>
        </li>
        <li class="nav-item" role="presentation">
          <button class="nav-link" id="request-tab" data-bs-toggle="tab" data-bs-target="#request" type="button" role="tab" aria-controls="request" aria-selected="false">Coffee</button>
        </li>
          <li class="nav-item" role="presentation">
          <button class="nav-link" id="contact-tab" data-bs-toggle="tab" data-bs-target="#contact" type="button" role="tab" aria-controls="contact" aria-selected="false">Clubs</button>
        </li>
            </li>
          <li class="nav-item" role="presentation">
          <button class="nav-link" id="contact-tab" data-bs-toggle="tab" data-bs-target="#contact" type="button" role="tab" aria-controls="contact" aria-selected="false">Cinemas</button>
        </li>
            </li>
          <li class="nav-item" role="presentation">
          <button class="nav-link" id="contact-tab" data-bs-toggle="tab" data-bs-target="#contact" type="button" role="tab" aria-controls="contact" aria-selected="false">Parks</button>
        </li>
      </ul>
    </nav>
</div>

<div class="longer-cards-container">
  <% @favourites.each do |favourite| %>
    <div class="card-product">
      <img src="<%=favourite.venue.image_url%>"/>
      <div class="card-product-infos">
        <h2><%= favourite.venue.name %></h2>
        <p><i class="fas fa-map-marker-alt"></i> <%= favourite.venue.address %></p>
        <div class="d-flex justify-content-between">
          <p><%= "⭐️" * (favourite.venue.rating || 0) %></p>
        </div>
      </div>
    </div>
  <% end %>
</div>
